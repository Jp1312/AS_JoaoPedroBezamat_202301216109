<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#191818"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próxima Pergunta" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:text="Qual é o maior planeta do sistema solar?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupOptions"
        android:layout_width="411dp"
        android:layout_height="640dp"
        android:background="#0C0C0C"
        android:backgroundTint="#020202"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Júpiter"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturno"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButtonOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terra"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioButtonOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marte"
            android:textColor="@color/white" />
    </RadioGroup>
</LinearLayout>